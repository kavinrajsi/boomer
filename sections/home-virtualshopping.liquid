<section class="shopify-section homepage-section">
  <section class="virtualshopping" style="background: #efe1d3 url(https://cdn.shopify.com/s/files/1/0560/3695/0174/files/INDIVIDUAL-09.png?v=1666857139) repeat center;background-size: cover;">
    <a href="{{ section.settings.url }}">
      <div class="content-area">
        <h3>The Virtual Store <br> Of Exquisite Products</h3>
        <p> Shop our collection from the comfort of your home</p>
        <span>Book an Appointment</span>
      </div>
      <div class="image-area">
      <img src="https://cdn.shopify.com/s/files/1/0560/3695/0174/files/vs-desktop-image-1.png?v=1666855198" alt="">
    </div>
    </a>
  </section>
</section>


{% schema %}
{
"name": "Virtual Shopping",
"class": "homepage-virtual-shopping",
"tag": "section",
"settings": [
{
"type": "text",
"id": "spotlight-title",
"label": "Section Title",
"default": "The Virtual Store Of Exquisite Products"
},
{
"type": "text",
"id": "spotlight-description",
"label": "Section Description",
"default": "Shop our collection from the comfort of your home"
},
{
"type": "text",
"id": "spotlight-button",
"label": "Section Button",
"default": "Book an Appointment"
},
{
"type": "image_picker",
"id": "vsvirtual-shopping-mobile",
"label": "Virtual Image for Mobile"
},
{
"type": "image_picker",
"id": "vsvirtual-shopping-desktop",
"label": "Virtual Image for Desktop"
},
{
"type": "url",
"id": "virtual-shopping-url",
"label": "Link URL"
}
]
}
{% endschema %}
