<header>
  <div class="header-action-list">

    {%- if request.page_type == 'index' -%}
    <h1 class="header-logo header__heading" itemscope itemtype="http://schema.org/Organization">
      {%- endif -%}
      <a href="{{ routes.root_url }}" class="header__heading-link link link--text focus-inset" itemprop="url">
        {%- if section.settings.logo != blank -%}
        {%- assign logo_alt = section.settings.logo.alt | default: shop.name | escape -%}
        {%- assign logo_height = section.settings.logo_width | divided_by: section.settings.logo.aspect_ratio -%}
        {{ section.settings.logo | image_url: width: section.settings.width | image_tag:
        class: 'header__heading-logo',
        widths: '50, 100, 150, 200, 250, 300, 400, 500',
        height: logo_height,
        width: section.settings.logo_width,
        alt: logo_alt
        }}
        {%- else -%}
        <span class="h2">{{ shop.name }}</span>
        {%- endif -%}
      </a>
      {%- if request.page_type == 'index' -%}
    </h1>
    {%- endif -%}

    <div class="header-action-lists">
      <div class="header-menu">
        <svg width="24" height="24">
          <use href="#menu" />
        </svg>
      </div>
      <div class="header-chat">
        <a href="{{ canonical_url }}?chat" class="header__icon" id="cart-icon-bubble">
        <svg width="24" height="24">
          <use href="#chat" />
        </svg>
        </a>
      </div>
      <div class="header-search">
        <svg width="24" height="24">
          <use href="#search" />
        </svg>
      </div>
      <div class="header-wishlist" style="display: none;">
        <svg width="24" height="24">
          <use href="#heart" />
        </svg>
      </div>
      <div class="header-cart">
      <a href="{{ routes.cart_url }}" class="" id="cart-icon-bubble">
        <svg width="24" height="24">
          <use xlink:href="#bag" />
        </svg>
        {%- if cart != empty -%}
        <div class="cart-count">
          {%- if cart.item_count < 100 -%} <span aria-hidden="true">{{ cart.item_count }}</span>
            {%- endif -%}
            <span class="visually-hidden">{{ 'sections.header.cart_count' | t: count: cart.item_count }}</span>
        </div>
        {%- endif -%}
      </a>
    </div>

      <div class="header-account">
        {%- if shop.customer_accounts_enabled -%}
        <a href="{%- if customer -%}{{ routes.account_url }}{%- else -%}{{ routes.account_login_url }}{%- endif -%}"
          class="header__icon header__icon--account link focus-inset{% if section.settings.menu != blank %} small-hide{% endif %}">
          <svg width="24" height="24">
            <use href="#user" />
          </svg>
        </a>
        {%- endif -%}
      </div>
    </div>
  </div>

  <div class="header-search-area-wrapper" style="display: block;">
    <form class="header-search-area" action="{{ routes.search_url }}">
      <i class="input__search-icon">
        <svg width="24" height="24">
          <use href="#search" />
        </svg>
      </i>
      <input type="search" class="input-full" placeholder="Search for product" name="q"
        value="{{ search.terms | escape }}" />
      <i class="input__close-icon">
        <svg width="24" height="24">
          <use href="#close" />
        </svg>
      </i>
    </form>

  </div>
  <!-- navigation -->
  <nav class="header-nav-list-main" role="navigation">
    <ul class="menu-level-1">
      {%- for link in linklists.main-menu.links -%}
      <li class="menu-level-1-item">
        <a href="{{ link.url }}" {% if link.active %}aria-current="page" {% endif %}>
          {{ link.title }}
        </a>

        {%- if link.links != blank -%}
        <ul class="menu-level-2">
          {%- for child_link in link.links -%}
          <li class="menu-level-2-item">
            <a href="{{ child_link.url }}" {% if child_link.active %}aria-current="page" {% endif %}>
              {{ child_link.title }}
            </a>

            {%- if child_link.links != blank -%}
            <ul class="menu-level-3">
              {%- for grandchild_link in child_link.links -%}
              <li class="menu-level-3-item">
                <a href="{{ grandchild_link.url }}" {% if grandchild_link.active %}aria-current="page" {% endif %}>
                  {{ grandchild_link.title }}
                </a>
              </li>
              {%- endfor -%}
            </ul>
            {%- endif -%}

          </li>
          {%- endfor -%}

          <li class="menu-level-2-item-image image-one">
            <a href="#">
              {{ section.settings.image_silk_saree | image_url : width: section.settings.width | image_tag : class: 'try-3d', loading: 'lazy',
              alt: section.settings.image_silk_saree.alt }}
              <p class="menu-image-title">Kanchipuram Silk</p>
              <p class="menu-image-link-button">Explore Now</p>
              </a>
          </li>
          <li class="menu-level-2-item-image image-two">
            <a href="#">
              {{ section.settings.image_silk_saree | image_url : width: section.settings.width | image_tag : class: 'try-3d', loading: 'lazy',
              alt: section.settings.image_silk_saree.alt }}
              <p class="menu-image-title">Wedding Edit</p>
              <p class="menu-image-link-button">Explore Now</p>
              </a>
          </li>
        </ul>
        {%- endif -%}

      </li>
      {%- endfor -%}
      <!-- <li>
        <a href="{{}}/?chat">Chat</a>
      </li> -->
    </ul>
  </nav>
  <!-- navigation -->
</header>


