<section>
  <div class="section-header-wrapper justify-content-center">
    <div class="section-header">
      <div class="section-header-title">{{ block.settings.curated-title }}</div>
      <div class="section-header-content">{{ block.settings.curated-description }}</div>
    </div>
  </div>
  <div class="section-content">
    {%- for block in section.blocks -%}
    {%- if block.settings.image -%}
    <div class="item">
        {{ block.settings.image | image_url : width: 300 | image_tag : alt: block.settings.image.alt }}
    </div>
    {%- else -%}
    <div class="item">
      {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg' }}
    </div>
    {%- endif -%}
    {%- endfor-%}
  </div>
</section>

{% schema %}
{
"name": "Curated Section",
"tag": "section",
"class": "section",
"settings": [
    {
      "type": "text",
      "id": "curated-title",
      "label": "Section Title",
      "default": "Curated collection"
    },
    {
      "type": "text",
      "id": "curated-description",
      "label": "Section Description",
      "default": "Styles for every occasion"
    }
],
"blocks": [
{
  "type": "collection-image",
  "name": "Curated Image Section",
  "limit": 24,
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Desktop Image"
    },
    {
      "type": "url",
      "id": "link",
      "label": "Image link"
    }
  ]
}
],
"presets": [
{
"name": "Curated Section",
"blocks": [
  {
  "type": "collection-image"
  },
  {
  "type": "collection-image"
  },
  {
  "type": "collection-image"
  }
]
}
]
}
{% endschema %}
