    <div class="product-image">
      <img class="lazyload" data-sizes="auto" data-src="{{ product_image | image_url: width: 440 }}"
        alt="{{ product_image.alt }}" id="product-image-main">
      <br>
      {% for image in product.images %}
      <img class="lazyload" data-sizes="auto" data-src="{{ image.src | image_url : width: 400 }}" alt="{{image.alt }}">
      {% endfor %}
    </div>
    <div class="product-content">
      <h2 class="product-image">{{product.title}}</h2> <br>
      <p claxss="product-sku">
