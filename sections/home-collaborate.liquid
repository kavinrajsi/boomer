<section class="home-page-silver-section">
  <div class="section-header-wrapper">
    <div class="section-header text-center">
      <div class="section-header-title">
        {{section.settings.collaborate-title}}
      </div>
      <div class="section-header-content">
        {{section.settings.collaborate-description}}</div>
    </div>
  </div>
  <div class="section-content">
    <nav>
      {% for block in section.blocks %}
      {% if block.settings.image != blank %}
      <a href="{{block.settings.url}}">
        {{ block.settings.image | image_url : width: 168, height: 168 | image_tag : alt: block.settings.image.alt }}
      </a>
      {% else %}
      {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg' }}
      {% endif %}
      {% endfor %}
    </nav>
  </div>
</section>
{% schema %}
{
"name": "Collaboration Section",
"tag": "section",
"settings": [
{
"type": "text",
"id": "collaborate-title",
"label": "Section Title",
"default": "Athirshtam Jewellery"
},
{
"type": "text",
"id": "collaborate-description",
"label": "Section Description",
"default": "An eclectic silver jewellery collection embedded with cultural and contemporary nuances"
}
],
"blocks": [
{
"type": "image",
"name": "Collaboration Item",
"limit": 6,
"settings": [
{
"type": "image_picker",
"id": "image",
"label": "Image"
},
{
"type": "url",
"id": "link",
"label": "Link"
}
]
}
]
}
{% endschema %}
