<div class="collection-page-header">

  {% commnet %}
  {% if collection.description != blank %}
  <div class="collection-page-header-image text-center image-radius">
    {{ collection | image_url: height: '340x', format: 'pjpg' | image_tag : alt: collection.image.alt, class:
    'image-radius' }}
  </div>
  {% else %}

  {% endcommnet %}
  <div class="collection-page-title">
    {% if collection.title != blank %}
    <h1>{{ collection.title }}</h1>
    {% endif %}
  </div>

  {% commnet %}
  {% endif %}
  {% if collection.description != blank %}
  <div class="collection-page-description">
    <p>{{ collection.description }}</p>
  </div>
  {% endif %}

  {% endcommnet %}
</div>

{% render 'filter' %}

<div class="fixedElement section-{{ section.id }}-padding">
  <section>
    {% paginate collection.products by 28 %}
    <div class="collection-list-grid" collection-list-mobile="2" collection-list-tablet="3" collection-list-desktop="4">
      {% for product in collection.products %}
      {% render 'product-card', product:product %}
      {% endfor %}
    </div>
    <div class="pagination--number">
      {{ paginate | default_pagination: next: 'Older', previous: 'Newer' }}
    </div>
    {% endpaginate %}
  </section>
</div>
