<footer>
  <div class="footer-main">
    <div class="footer-logo">
      <a href="{{ routes.root_url }}" class="header__heading-link link link--text focus-inset" itemprop="url">
        {% if section.settings.logo != blank %}
        {% assign logo_alt = section.settings.logo.alt | default: shop.name | escape %}
        {% assign logo_height = section.settings.logo_width | divided_by: section.settings.logo.aspect_ratio %}
        <img src="{{ section.settings.logo.src | image_url: width: 172, height: 38, format: 'pjpg' }}" alt="{{ logo_alt }}">
        {% endif %}
      </a>
    </div>
    <div class="footer-link">
      <h4>Shop</h4>
      <ul class="menu">
        {% for link in linklists.shop.links %}
        <li class="menu-link">
          <a href="{{ link.url }}">{{ link.title }}</a>
          {% if link.links.size > 0 %}
          <ul class="menu dropdown-child">
            {% for child_link in link.links %}
            <li class="menu-link">
              <a href="{{ child_link.url }}">{{ child_link.title }}</a>
              {% if child_link.links.size > 0 %}
              <ul class="menu dropdown-grandchild">
                {% for grandchild_link in child_link.links %}
                <li class="menu-link">
                  <a href="{{ grandchild_link.url }}">{{ grandchild_link.title }}</a>
                </li>
                {% endfor %}
              </ul>
              {% endif %}
            </li>
            {% endfor %}
          </ul>
          {% endif %}
        </li>
        {% endfor %}
      </ul>
    </div>
    <div class="footer-help">
      <h4>Help</h4>
      <ul class="menu">
        {% for link in linklists.help.links %}
        <li class="menu-link">
          <a href="{{ link.url }}">{{ link.title }}</a>
          {% if link.links.size > 0 %}
          <ul class="menu dropdown-child">
            {% for child_link in link.links %}
            <li class="menu-link">
              <a href="{{ child_link.url }}">{{ child_link.title }}</a>
              {% if child_link.links.size > 0 %}
              <ul class="menu dropdown-grandchild">
                {% for grandchild_link in child_link.links %}
                <li class="menu-link">
                  <a href="{{ grandchild_link.url }}">{{ grandchild_link.title }}</a>
                </li>
                {% endfor %}
              </ul>
              {% endif %}
            </li>
            {% endfor %}
          </ul>
          {% endif %}
        </li>
        {% endfor %}
      </ul>
    </div>
    <div class="footer-care">
      <h4>Customer Care</h4>
      <ul>
        <li>
          <i>
            <svg width="24" height="24">
              <use href="#phone" />
            </svg>
            <a href="tel:+919962712299">+91 99627 12299</a>
          </i>
        </li>
        <li>
          <i>
            <svg width="24" height="24">
              <use href="#calendar" />
            </svg>
            <span>
              Monday - Satuday<br>
              9:00 am to 6:00 pm (IST)
            </span>
          </i>
        </li>
        <li>
          <i>
            <a href="mailto:different@sundarisilks.com">

              <svg width="24" height="24">
                <use href="#mail" />
              </svg>
              <span>
                different@sundarisilks.com
              </span>
            </a>
          </i>
        </li>
      </ul>
    </div>
    <div class="footer-link-company">
      <h4>Company</h4>
      <ul class="menu">
        {% for link in linklists.company.links %}
        <li class="menu-link">
          <a href="{{ link.url }}">{{ link.title }}</a>
          {% if link.links.size > 0 %}
          <ul class="menu dropdown-child">
            {% for child_link in link.links %}
            <li class="menu-link">
              <a href="{{ child_link.url }}">{{ child_link.title }}</a>
              {% if child_link.links.size > 0 %}
              <ul class="menu dropdown-grandchild">
                {% for grandchild_link in child_link.links %}
                <li class="menu-link">
                  <a href="{{ grandchild_link.url }}">{{ grandchild_link.title }}</a>
                </li>
                {% endfor %}
              </ul>
              {% endif %}
            </li>
            {% endfor %}
          </ul>
          {% endif %}
        </li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="footer-copyright">
    <p>&copy; {{ 'now' | date: '%Y' }}, {{ shop.name | link_to: '/' }}. Built with ❤️ in India</p>
  </div>
</footer>


{% schema %}
{
  "name": "Footer",
  "class": "section-header",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Footer logo"
    },
    {
      "type": "range",
      "id": "logo_width",
      "min": 50,
      "max": 250,
      "step": 10,
      "default": 100,
      "unit": "px",
      "label": "Custom logo width"
    }
  ]
}
{% endschema %}
