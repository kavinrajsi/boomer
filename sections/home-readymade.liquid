<section class="home-page-readymade-section">
  <div class="section-header-wrapper justify-content-center">
    <div class="section-header">
      <div class="section-header-title">{{ section.settings.readymade-title }}</div>
      <div class="section-header-content">{{ section.settings.readymade-description }}</div>
    </div>
  </div>
<div class="section-content collection-readymade">
    {%- if block.settings.image -%}
    <div class="item">
      {{ block.settings.image | image_url : width: 264, height: 290 | image_tag : alt: block.settings.image.alt }}
    </div>
    {%- else -%}
    <div class="item">
      {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg' }}
    </div>
    {%- endif -%}
</div>
</section>

{% schema %}
{
"name": "Ready Made Section",
"tag": "section",
"class": "section",
"settings": [
{
"type": "text",
"id": "readymade-title",
"label": "Section Title",
"default": "Ready Made collection"
},
{
"type": "text",
"id": "readymade-description",
"label": "Section Description",
"default": "Styles for every occasion"
}
],
"blocks": [
{
"type": "readymade-image",
"name": "Readymade Image Section",
"limit": 6,
"settings": [
{
"type": "image_picker",
"id": "image",
"label": "Image"
},
{
"type": "url",
"id": "link",
"label": "Image link"
}
]
}
]
}
{% endschema %}
