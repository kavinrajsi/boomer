      <div class="product__variant--sku"> {{ variant.sku }} </div>
      {% endfor %}
      </p> <br>
      <p class="product-price">{{current_product.price | money_with_currency }}</p><br>
      <p class="notice-content {% for collection in product.collections%} {{collection.title}} {% endfor %}">
