<div class="page-account">
  <aside class="page-account-navigation">
    <nav>
      <a href="/account">
        <span> Account Details </span>
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="16"
          height="16"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="1"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="feather feather-chevron-down"
        >
          <polyline points="6 9 12 15 18 9"></polyline>
        </svg>
      </a>
      <a href="/pages/order">
        <span> My Orders </span>
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="16"
          height="16"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="1"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="feather feather-chevron-down"
        >
          <polyline points="6 9 12 15 18 9"></polyline>
        </svg>
      </a>
      <a href="/pages/swym-wishlist">
        <span> My Wishlist </span>
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="16"
          height="16"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="1"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="feather feather-chevron-down"
        >
          <polyline points="6 9 12 15 18 9"></polyline>
        </svg>
      </a>
      <a class="active" href="/account/addresses">
        <span>Address </span>
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="16"
          height="16"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="1"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="feather feather-chevron-down"
        >
          <polyline points="6 9 12 15 18 9"></polyline>
        </svg>
      </a>
      <a href="{{ routes.account_logout_url }}">Sign Out </a>
    </nav>
  </aside>

  <section>
    <h2 class="account-card-title">Address</h2>
    <div class="address-list">
      {% for address in customer.addresses %}
        {% if address == customer.default_address %}
          <address>
            <div itemscope itemtype="https://schema.org/Person">
              <span itemprop="givenName"> {{ customer.default_address.first_name }} </span>
              <span itemprop="familyName"> {{ customer.default_address.last_name }} </span>
              <div class="postaladdress" itemprop="address" itemscope itemtype="https://schema.org/PostalAddress">
                {% if customer.default_address.address2 != blank %}
                  <span itemprop="streetAddress">{{ customer.default_address.address2 }} </span>
                {% endif %}
                {% if customer.default_address.address1 != blank %}
                  <span itemprop="streetAddress">
                    {{ customer.default_address.address1 }}
                  </span>
                {% endif %}
                {% if customer.default_address.city != blank %}
                  <span itemprop="addressLocality"> {{ customer.default_address.city }} </span>
                {% endif %}
                {% if customer.default_address.province != blank %}
                  <span itemprop="addressRegion">{{ customer.default_address.province }}</span>
                {% endif %}
                {% if customer.default_address.country != blank %}
                  <span itemprop="addressRegion"> {{ customer.default_address.country }} </span>
                {% endif %}
                {% if customer.default_address.zip != blank %}
                  <span itemprop="postalCode"> {{ customer.default_address.zip }} </span>
                {% endif %}
              </div>
              {% if customer.default_address.phone != blank %}
                <span itemprop="telephone">
                  <a href="tel://{{customer.default_address.phone}}">{{ customer.default_address.phone }}</a>
                </span>
              {% endif %}
            </div>
            {% comment %}
                <form class="address-delete-form" method="post" action="/account/addresses/{{ address.id }}">
                <svg width="24" height="24">
                  <use href="#trash" />
                </svg>
                <input type="hidden" name="_method" value="delete">
                <button type="submit">delete</button>
              </form>
            {% endcomment %}
          </address>
        {% else %}
          <address>
            <div itemscope itemtype="https://schema.org/Person">
              <span itemprop="givenName"> {{ customer.first_name }} </span>
              <span itemprop="familyName"> {{ customer.last_name }} </span>
              <div class="postaladdress" itemprop="address" itemscope itemtype="https://schema.org/PostalAddress">
                {% if address.address2 != blank %}
                  <span itemprop="streetAddress">{{ address.address2 }} </span>
                {% endif %}
                {% if address.address1 != blank %}
                  <span itemprop="streetAddress">
                    {{ address.address1 }}
                  </span>
                {% endif %}
                {% if address.city != blank %}
                  <span itemprop="addressLocality"> {{ address.city }} </span>
                {% endif %}
                {% if address.province != blank %}
                  <span itemprop="addressRegion">{{ address.province }}</span>
                {% endif %}
                {% if address.country != blank %}
                  <span itemprop="addressRegion"> {{ address.country }} </span>
                {% endif %}
                {% if address.zip != blank %}
                  <span itemprop="postalCode"> {{ address.zip }} </span>
                {% endif %}
              </div>
              {% if address.phone != blank %}
                <span itemprop="telephone">
                  <a href="tel://{{address.phone}}">{{ address.phone }}</a>
                </span>
              {% endif %}
            </div>
            {% comment %}
                <form class="address-delete-form" method="post" action="/account/addresses/{{ address.id }}">
                <svg width="24" height="24">
                  <use href="#trash" />
                </svg>
                <input type="hidden" name="_method" value="delete">
                <button type="submit">delete</button>
              </form>
            {% endcomment %}
          </address>
        {% endif %}
      {% endfor %}
    </div>
  </section>
</div>
